!!!
%html
  %head
    %title Cocktail Fly
    = stylesheet_link_tag 'application'
    = csrf_meta_tags
  %body
    %header.navbar-default{:role => "banner"}
      .container
        .navbar-header
          = link_to 'Cocktail Fly', root_path, class: 'navbar-brand'
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        %ul.nav.navbar-nav.navbar-right.collapse.navbar-collapse{:role => "navigation"}
          %li= link_to "Ingredients", ingredients_path
          %li= link_to "Cocktails", cocktails_path
          %li= link_to "Users", users_path
    .container
      .row
        - if notice
          %p.alert.alert-success= notice
      = yield

    = javascript_include_tag 'application'
